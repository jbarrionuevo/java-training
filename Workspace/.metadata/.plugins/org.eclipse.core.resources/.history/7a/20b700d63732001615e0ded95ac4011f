package classes;

import java.util.Collection;

public class Logistic extends Employee {
	
	private Collection<Case> inventory;

	public Collection<Case> getInventory() {
		return inventory;
	}

	public void setInventory(Collection<Case> inventory) {
		this.inventory = inventory;
	}
	
	public void addCaseToInventory(Case aCase){
		this.inventory.add(aCase);
	}
	
	public void receiveCaseFromProvider(Order madeOrder){
		this.addCaseToInventory(madeOrder.getMyCase());
	}
	
	public void requestProvider(Case aCase, Provider provider, int quantity){
		provider.addOrder(new ProviderOrder(aCase, quantity, new Date(), provider));
	}
	
}
