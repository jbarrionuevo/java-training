<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
           http://www.springframework.org/schema/aop
           http://www.springframework.org/schema/aop/spring-aop-2.5.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-2.5.xsd">

	<bean id="employee" class="edu.globant.domain.Employee">
	</bean>

	<bean id="hikariConfig" class="com.zaxxer.hikari.HikariConfig">
		<property name="poolName" value="springHikariCP" />
		<property name="connectionTestQuery" value="SELECT 1" />
		<property name="dataSourceClassName"
			value="com.mysql.jdbc.jdbc2.optional.MysqlDataSource" />
		<property name="dataSourceProperties">
			<props>
				<prop key="url">${jdbc.url}</prop>
				<prop key="user">${jdbc.username}</prop>
				<prop key="password">${jdbc.password}</prop>
			</props>
		</property>
	</bean>

	<bean name="springDataSource" class="com.mysql.jdbc.jdbc2.optional.MysqlDataSource"
		lazy-init="true">
		<property name="user" value="root" />
		<property name="password" value="jbarrionuevo" />
		<property name="serverName" value="localhost" />
    	<property name="portNumber" value="3306" />
    	<property name="databaseName" value="training" />
    	
    	<property name="useServerPrepStmts" value="true" />
    	<property name="cachePrepStmts" value="true" />
    	<property name="prepStmtCacheSize" value="250" />
    	<property name="prepStmtCacheSqlLimit" value="20148" />
	</bean>
	
	<bean id="springSessionFactory"
		class="org.springframework.orm.hibernate5.LocalSessionFactoryBean">
		<property name="dataSource" ref="springDataSource" />

		<property name="annotatedClasses">
			<list>
				<value>edu.globant.domain.Employee
				</value>
			</list>
		</property>
		<property name="configLocation">
			<value>/edu/globant/config/hibernate.cfg.xml</value>
		</property>
		<!-- <property name="hibernateProperties">
			<props>
				<prop key="hibernate.dialect">org.hibernate.dialect.HSQLDialect</prop>
				<prop key="hibernate.current_session_context_class">thread</prop>
			</props>
		</property> -->
	</bean>

