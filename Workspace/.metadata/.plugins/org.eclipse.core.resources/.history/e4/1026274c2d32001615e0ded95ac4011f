package classes;

import java.util.Date;

public class Receipt {
	private String storeName;
	private int quantity;
	private Customer customer;
	private Date dateOfSale;
	private Case myCase;
	
	public Receipt(String storeName, int quantity, Customer customer,
			Date dateOfSale, Case myCase) {
		super();
		this.storeName = storeName;
		this.quantity = quantity;
		this.customer = customer;
		this.dateOfSale = dateOfSale;
		this.myCase = myCase;
	}
	
	@Override
	public String toString(){
		return String.format("Receipt: Store name: %s; Quantity: %d; Customer: %s;"
				+ "Date: %s; Case: %s", this.storeName, this.quantity,
				this.customer, this.dateOfSale, this.myCase);
	}

	public String getStoreName() {
		return storeName;
	}

	public void setStoreName(String storeName) {
		this.storeName = storeName;
	}

	public int getQuantity() {
		return quantity;
	}

	public void setQuantity(int quantity) {
		this.quantity = quantity;
	}

	public Date getDateOfSale() {
		return dateOfSale;
	}

	public void setDateOfSale(Date dateOfSale) {
		this.dateOfSale = dateOfSale;
	}

	public Case getMyCase() {
		return myCase;
	}

	public void setMyCase(Case myCase) {
		this.myCase = myCase;
	}

	public Customer getCustomer() {
		return customer;
	}

	public void setCustomer(Customer customer) {
		this.customer = customer;
	}
	
	

	
}
